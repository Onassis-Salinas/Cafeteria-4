---
const { image, title, price } = Astro.props;
---

<div class="w-full">
    <div class="xxx mb-5 w-full bg-cover -translate-x-1 rounded-3xl aspect-square" style=`background-image:url(${image})`></div>
    <h3 class="text-xl font-medium mt-5 ml-1">{title}</h3>
    <p class="text-sm font-extralight ml-1">${price}</p>
</div>

<style>
    .xxx {
        position: relative;
    }
    .xxx::after {
        content: "";
        border-radius: inherit;
        border: 3px solid #fac660;
        top: 8px;
        left: 8px;
        width: 100%;
        height: 100%;
        position: absolute;
    }
</style>
